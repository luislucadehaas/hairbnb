<div class="text">
<h2 class="rock">Rock these <strong class= "bold-text"><%= @wigs.count %></strong> Wigs</h2>
</div>
<div class="search">

<%= simple_form_for :search, url: wigs_path, method: :get do |f| %>
        <div class="search-form-control form-group">
           <input class="form-control string required" type="text" name="search[query]" id="search_query" />
            <button name="button" type="submit" class="btn btn-flat">
           <i class="fas fa-search"></i> Search
          </button>
        </div>
      <% end %>
</div>


<div class="container" id="card-container">
  <div class="cards-all">
    <div class="row">
            <% @wigs.each do |wig| %>
      <div class="col-sm-6 col-xs-6 col-md-4 column" >
         <%= link_to wig_path(wig) do %>
        <div class="card-trip">
          <img src="<%= wig.photo%>">
            <div class="card-trip-infos">
              <div>
                <h2 class="wig-title"><%=wig.title.truncate(20)%></h2>
              <p><%=wig.color.truncate(20)%></p>
            </div>
           <h2 class="card-trip-pricing"><%=wig.price%>â‚¬</h2>
          </div>
        </div>
      </div>
     <% end %>
     <% end %>
    </div>
  </div>
  <div
    id="map"
    style="width: 400px;
    height: 100vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>



