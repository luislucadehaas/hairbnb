<div class="container">
  <div class="text">
<h2>Rock these <%= @wigs.count %> Wigs</h2>
</div>
<%= simple_form_for :search, url: wigs_path, method: :get do |f| %>
        <div class="search-form-control form-group">
           <input class="form-control string required" type="text" name="search[query]" id="search_query" />
            <button name="button" type="submit" class="btn btn-flat">
           <i class="fas fa-search"></i> Search
          </button>
        </div>
      <% end %>
</div>

<div class="container">
  <div class="row">
          <% @wigs.each do |wig| %>
    <div class="col-sm-3">
      <div class="card-trip">
        <img src="<%= wig.photo%>">
          <div class="card-trip-infos">
            <div>
              <h2><%= link_to wig.title.truncate(20), wig_path(wig) %></h2>
            <p><%=wig.description.truncate(30)%></p>
          </div>
