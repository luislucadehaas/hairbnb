<div class="container-2">
  <div class="form-wrapper">
  <div class="row justify-content-center">
    <div class="col-md-6">
    <h2>Update ya wig</h2>

      <%= simple_form_for @wig do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :color %>
        <%= f.input :price %>
        <%= f.input :size %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, 'Save', class: 'btn-flat' %>
      <% end %>
    </div>
  </div>
</div>
</div>

