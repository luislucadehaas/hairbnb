<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
    <h1>Create a new wig</h1>

      <%= simple_form_for @wig do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :color %>
        <%= f.input :price %>
        <%= f.input :size %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>


