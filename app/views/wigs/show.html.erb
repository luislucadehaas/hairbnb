<div class='container'>
  <h1>this is the fucking wig you chose</h1>
  <div class="cards">
    <div class="card-product">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg">
      <div class="card-product-infos">
        <h2><%= @wig.title %></h2>
        <p>Description: <%= @wig.description %></p>
        <p>Size: <%= @wig.size %></p>
        <p>Color: <%= @wig.color %></p>
      </div>
      <div class="text-right">
        <%= @wig.price %>
      </div>
    </div>

     <div class="card">
      <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
        <h2>Rent this wig at:</h2>

        <%= simple_form_for :search, method: "get" do |f| %>
          <%= f.input :start_at, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.input :end_at, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.button :submit, "Send Wiquest", class: "btn btn-flat" %>
        <% end %>
      </div>
    </div>

  </div>
</div>

